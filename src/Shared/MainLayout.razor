@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode Theme="_theme" />

<LoadingScreen>
    <MudLayout>
        <MudAppBar Color="Color.Primary" Elevation="0" Dense>
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
                @if (!_drawerOpen)
                {
                    <MudText Typo="Typo.h6" Class="ml-3">Kaparós sorsjegyek</MudText>
                }
        </MudAppBar>
        <MudDrawer @bind-Open="_drawerOpen">
            <MudDrawerHeader Class="justify-center" Dense>
                <MudText Typo="Typo.h6">Kaparós sorsjegyek</MudText>
            </MudDrawerHeader>
            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-6">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</LoadingScreen>

@code {
    private MudTheme _theme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = Colors.Green.Default,
        },
    };

    private bool _drawerOpen;

    private void DrawerToggle() => _drawerOpen = !_drawerOpen;
}