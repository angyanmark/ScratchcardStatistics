@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode />

<LoadingScreen>
    <MudLayout>
        <MudAppBar Color="Color.Primary" Elevation="0">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
                @if (!drawerOpen)
                {
                    <MudText Typo="Typo.h6" Class="ml-3">Kaparós sorsjegyek</MudText>
                }
        </MudAppBar>
        <MudDrawer @bind-Open="drawerOpen">
            <MudDrawerHeader Class="justify-center">
                <MudText Typo="Typo.h6">Kaparós sorsjegyek</MudText>
            </MudDrawerHeader>
            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-6">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</LoadingScreen>

@code {
    private bool drawerOpen = false;

    private void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }
}